<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#17224D"
    android:visibility="visible">

    <TextView
        android:id="@+id/passwordSignUpText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="536dp"
        android:text="Password:"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="271dp"
        android:layout_height="209dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="48dp"
        android:contentDescription="logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/volunteer_logo_blue" />

    <EditText
        android:id="@+id/usernameEntry"
        android:layout_width="237dp"
        android:layout_height="83dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="408dp"
        android:editable="true"
        android:ems="10"
        android:hint="Username"
        android:inputType="text"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="276dp"
        android:fontFamily="sans-serif-medium"
        android:text="HELPING HANDS"
        android:textColor="#FFFFFF"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/usernameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="433dp"
        android:text="Username:"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/signUpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginTop="712dp"
        android:backgroundTint="#2195F2"
        android:text="Sign Up"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/newUserText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="724dp"
        android:text="New User?"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/passwordEntry"
        android:layout_width="237dp"
        android:layout_height="83dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="406dp"
        android:clickable="false"
        android:editable="true"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textSize="30dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/nextButtonHome"
        android:layout_width="90dp"
        android:layout_height="83dp"
        android:layout_marginStart="296dp"
        android:layout_marginTop="516dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="nextButton"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/next_button_white" />

    <ImageButton
        android:id="@+id/backButtonHome"
        android:layout_width="90dp"
        android:layout_height="83dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="516dp"
        android:backgroundTint="#00FFFFFF"
        android:clickable="false"
        android:contentDescription="backButton"
        android:rotation="180"
        android:scaleType="fitCenter"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/next_button_white" />

    <TextView
        android:id="@+id/madeByText"
        android:layout_width="248dp"
        android:layout_height="19dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="796dp"
        android:contentDescription="madeByMe"
        android:text="Â©Copyright 2023 - Made by Aditya Gajula"
        android:textColor="#FFFFFF"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/passwordSignUpField"
        android:layout_width="237dp"
        android:layout_height="83dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="507dp"
        android:clickable="false"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/cancelSignUpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginTop="712dp"
        android:backgroundTint="#FF0000"
        android:clickable="false"
        android:text="Cancel"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioButton
        android:id="@+id/studentRadioButton"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="620dp"
        android:buttonTint="#FFFFFF"
        android:checked="true"
        android:clickable="false"
        android:text="Student"
        android:textColor="#FFFFFF"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userTypeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="628dp"
        android:text="I am a(n) : "
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioButton
        android:id="@+id/adminRadioButton"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginStart="264dp"
        android:layout_marginTop="620dp"
        android:buttonTint="#FFFFFF"
        android:checked="false"
        android:clickable="false"
        android:text="Admin"
        android:textColor="#FFFFFF"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>